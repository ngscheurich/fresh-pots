<p id="notice"><%= notice %></p>

<h1>Coffee Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coffee_types.each do |coffee_type| %>
      <tr>
        <td><%= coffee_type.name %></td>
        <td><%= link_to 'Show', coffee_type %></td>
        <td><%= link_to 'Edit', edit_coffee_type_path(coffee_type) %></td>
        <td><%= link_to 'Destroy', coffee_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

