<div class="bg-white">
  <div class="measure center pa3 pv5-ns black-90">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <fieldset class="ba b--transparent pa0 ma0">
        <legend class="f3 fw6 ph0 mv0 display">Forgot your password?</legend>
        <p class="mb4 lh-copy">
          That’s cool&mdash;it happens. Fill out this form and
          we’ll get everything all sorted out.
        </p>

        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
      </fieldset>

      <%= f.button :submit, "Submit",
        class: "aa dib tc pa3 ph4 ttu br2 input-reset bn f5 pointer btn" %>
    <% end %>

    <div class="mt4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
